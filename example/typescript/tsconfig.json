{
  "extends": "../../tsconfig.settings.json",
  "compilerOptions": {
    "composite": true,
    "sourceRoot": "../src",
    "baseUrl": "./src",
    "rootDir": "./",
    "noEmit": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
