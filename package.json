{
  "name": "@webpack-config-suite/root",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "Micha≈Ç Grzegorzewski <npm@ria-develop.pl>",
  "license": "ISC",
  "private": true,
  "directories": {
    "example": "example"
  },
  "scripts": {
    "build:packages": "tsc -b packages",
    "build": "lerna run build",
    "do-release-upgrade": "npx ncu -u && npx lerna exec npx -- ncu -u",
    "preinstall": "yarn clean && yarn do-release-upgrade",
    "clean": "lerna clean --yes && lerna exec -- rm -rf lib cjs dist types coverage *.tsbuildinfo && rm -rf coverage && jest --clearCache",
    "watch": "yarn build -- --parallel -- -w",
    "postinstall": "yarn build:packages && yarn run lint-types",
    "lint-types": "eslint --fix --rule \"@typescript-eslint/ban-types: off\" **/*.d.ts",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "test:coveralls": "yarn test:coverage && coveralls < coverage/lcov.info",
    "test:watch": "lerna run test --parallel -- --coverage --watchAll",
    "publish:local": "lerna exec npm -- pack && lerna exec mv -- *.tgz ../../dist -f",
    "example:typescript": "cd example/typescript && npm i && npm run start",
    "example:lerna": "cd example/lerna && npm i && lerna bootstrap && npm run start"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.6",
    "@octokit/core": "^3.2.1",
    "@ria-develop/eslint-config": "*",
    "@types/babel__core": "^7.1.12",
    "@types/babel__preset-env": "^7.9.1",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/webpack-dev-server": "^3.11.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.13.0",
    "jest": "^26.6.3",
    "jest-mock-extended": "^1.0.10",
    "lerna": "^3.22.1",
    "less": "^3.12.2",
    "postcss": "^8.1.6",
    "prettier": "^2.1.2",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "webpack": "^5.4.0",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "eslintConfig": {
    "extends": [
      "@ria-develop"
    ]
  }
}
