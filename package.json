{
  "name": "@webpack-config-suite/root",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "Micha≈Ç Grzegorzewski <npm@ria-develop.pl>",
  "license": "ISC",
  "private": true,
  "scripts": {
    "build-packages": "tsc -b packages",
    "build": "lerna run build",
    "prebuild": "lerna run prebuild",
    "clean": "lerna exec -- rm -rf lib cjs dist types *.tsbuildinfo",
    "watch": "yarn build -w",
    "clean:build": "yarn clean && yarn build",
    "postinstall": "yarn clean && yarn build && yarn run lint-types",
    "lint-types": "eslint --fix --rule \"@typescript-eslint/ban-types: off\" **/*.d.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/node": "^7.12.1",
    "@ria-develop/eslint-config": "*",
    "@types/babel__core": "^7.1.10",
    "@types/babel__preset-env": "^7.9.1",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.162",
    "@types/webpack-dev-server": "^3.11.0",
    "eslint": "^7.12.0",
    "jest": "^26.6.1",
    "jest-mock-extended": "^1.0.10",
    "lerna": "^3.22.1",
    "less": "^3.12.2",
    "postcss": "^8.1.4",
    "postcss-loader": "^4.0.4",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3",
    "webpack": "^5.2.0"
  },
  "workspaces": [
    "example/*",
    "packages/*"
  ],
  "eslintConfig": {
    "extends": [
      "@ria-develop"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "displayName": {
      "name": "webpack-config-suite",
      "color": "blue"
    },
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "packages/**/src/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**"
    ]
  },
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tslib": "^2.0.3"
  }
}
