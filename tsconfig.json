{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "DOM.Iterable",
      "DOM",
      "ES6",
      "ES2015.Collection",
      "ES2015.Iterable",
      "ESNext"
    ],
    "newLine": "lf",
    "useDefineForClassFields": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@webpack-config-suite/*": [
        "./packages/*/src"
      ],
      "@webpack-config-suite/example-typescript": [
        "./packages/example-typescript/src"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
